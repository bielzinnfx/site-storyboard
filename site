<script>
let cart = JSON.parse(localStorage.getItem("cart")) || [];

function updateCart() {
  const cartItems = document.getElementById("cart-items");
  cartItems.innerHTML = "";

  cart.forEach((item, index) => {
    const li = document.createElement("li");

    const checkbox = document.createElement("input");
    checkbox.type = "checkbox";
    checkbox.checked = true;
    checkbox.onchange = updateTotal;

    const info = document.createElement("div");
    info.className = "item-info";
    info.appendChild(checkbox);
    const text = document.createElement("span");
    text.textContent = `${item.quantidade}x ${item.nome} - R$ ${item.preco * item.quantidade}`;
    info.appendChild(text);

    const btns = document.createElement("div");
    btns.className = "item-buttons";

    const removeBtn = document.createElement("button");
    removeBtn.textContent = "Remover";
    removeBtn.onclick = () => {
      cart.splice(index, 1);
      localStorage.setItem("cart", JSON.stringify(cart));
      updateCart();
    };
    btns.appendChild(removeBtn);

    const buyItemBtn = document.createElement("button");
    buyItemBtn.textContent = "Finalizar Item";
    buyItemBtn.onclick = () => {
      localStorage.setItem("checkoutItem", JSON.stringify([item]));
      localStorage.removeItem("checkoutCart");
      window.location.href = "finalizacaodecompra.html";
    };
    btns.appendChild(buyItemBtn);

    li.appendChild(info);
    li.appendChild(btns);
    cartItems.appendChild(li);
  });

  updateTotal();
  localStorage.setItem("checkoutCart", JSON.stringify(cart));
}

function updateTotal() {
  const checkboxes = document.querySelectorAll("#cart-items li .item-info input");
  let total = 0;
  checkboxes.forEach((cb, index) => {
    if (cb.checked) total += cart[index].preco * cart[index].quantidade;
  });
  document.getElementById("total").textContent = total;
}

function finalizarSelecionados() {
  const checkboxes = document.querySelectorAll("#cart-items li .item-info input");
  const selectedItems = [];
  checkboxes.forEach((cb, index) => {
    if (cb.checked) selectedItems.push(cart[index]);
  });
  if (selectedItems.length === 0) {
    alert("Selecione pelo menos um item para finalizar.");
    return;
  }
  localStorage.setItem("checkoutItem", JSON.stringify(selectedItems));
  localStorage.removeItem("checkoutCart");
  window.location.href = "finalizacaodecompra.html";
}

function finalizarTodos() {
  localStorage.setItem("checkoutCart", JSON.stringify(cart));
  localStorage.removeItem("checkoutItem");
  window.location.href = "finalizacaodecompra.html";
}

updateCart();
</script>
</body>
</html>



