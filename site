  {nome:"Notebook Gamer", preco:5200, img:"https://www.kabum.com.br/_next/image?url=https%3A%2F%2Fimages6.kabum.com.br%2Fprodutos%2Ffotos%2F564916%2Fnotebook-gamer-acer-nitro-v15-intel-core-i5-13420h-8gb-ram-geforce-rtx-3050-ssd-512gb-15-6-fhd-ips-144hz-windows-11-preto-anv15-51-58az_1715197002_gg.jpg&w=640&q=75", categoria:"gamer"},
  {nome:"Mouse Gamer", preco:150, img:"https://media.pichau.com.br/media/catalog/product/cache/2f958555330323e505eba7ce930bdf27/t/g/tgt-gm25-bl0100002.jpg", categoria:"gamer"},
  {nome:"Mochila Techwear", preco:300, img:"https://m.media-amazon.com/images/I/71P-GL2FO+L._AC_SX466_.jpg", categoria:"wear"},
{nome:"Teclado Mec√¢nico", preco:350, img:"https://cdn.awsli.com.br/600x450/344/344383/produto/19802155/63198a073b2b9.jpg", categoria:"acessorios"}
];

let cart = JSON.parse(localStorage.getItem("cart")) || [];

function showCategory(cat) {
  const container = document.getElementById("produtos-container");
  container.innerHTML = "";
  let filtered = cat==="todos" ? produtos : produtos.filter(p=>p.categoria===cat);
  filtered.forEach(prod=>{
    const div = document.createElement("div");
    div.className = "produto";
    div.innerHTML = `<img src="${prod.img}" alt="${prod.nome}"><p>${prod.nome}</p><p>R$ ${prod.preco}</p><input type="number" min="1" value="1" id="qtd-${prod.nome}"><button class="add" onclick="addToCart('${prod.nome}')">Adicionar</button>`;
    container.appendChild(div);
  });
}

function addToCart(nome) {
  const quantidade = parseInt(document.getElementById(`qtd-${nome}`).value);
  const produto = produtos.find(p=>p.nome===nome);
  const index = cart.findIndex(p=>p.nome===nome);
  if(index>-1) cart[index].quantidade += quantidade;
  else cart.push({nome:produto.nome, preco:produto.preco, quantidade});
  localStorage.setItem("cart", JSON.stringify(cart));
  document.getElementById("message").textContent = `${quantidade}x ${nome} adicionado(s) ao carrinho!`;
}

showCategory("todos");
</script>



