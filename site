  <h2>üõí Seu Carrinho</h2>
  <ul id="cart-items"></ul>
  <h3>Total: R$ <span id="total">0</span></h3>
  <button onclick="finalizarSelecionados()">Finalizar Selecionados</button>
  <button onclick="finalizarTodos()">Finalizar Todos</button>
</main>

